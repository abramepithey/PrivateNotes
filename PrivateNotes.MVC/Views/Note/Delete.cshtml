@model PrivateNotes.Models.NoteDetailModel

@{
    ViewBag.Title = "Delete Note";
    Layout = "_Layout";
}

<h2>Delete Note</h2>

@Html.LabelFor(model => model.Title, "", new { @class = "col-2 "}):
@Html.DisplayFor(model => model.Title, "", new { @class = "col-10 "})

@Html.LabelFor(model => model.Content, "", new { @class = "col-2 "}):
@Html.DisplayFor(model => model.Content, "", new { @class = "col-10 "})

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color col">
        <input type="submit" value="Delete" class="btn btn-primary" />
    </div>
    <div class="col my-auto text-right">
        @Html.ActionLink("Back", "Index", "Note", new { @class = "btn btn-sm btn-secondary" })
    </div>
}