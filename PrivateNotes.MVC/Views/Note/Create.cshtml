@model PrivateNotes.Models.NoteCreateModel

@{
    ViewBag.Title = "Create a Note";
    Layout = "_Layout";
}

<h1>Create a new Note</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p>Create your new Note!</p>
        <hr/>
        <div class="form-group form-row">
            @Html.LabelFor(model => model.Title, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group form-row">
            @Html.LabelFor(model => model.Content, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Content, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group form-row">
            <div class="offset-md-2 col">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
            <div class="col my-auto text-right">
                @Html.ActionLink("Back to List", "Index", "Note", new {@class = "btn btn-sm btn-secondary"})
            </div>
        </div>
    </div>
}